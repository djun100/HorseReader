<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reader.main"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
	<uses-permission android:name="android.permission.INTERNET" />
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".SideBarActivity"
            android:configChanges="orientation|keyboardHidden" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LocalBookActivity" >
        </activity>
        <activity
            android:name=".FileManager" >
        </activity>
        <activity
            android:name=".ReadingActivity" >
        </activity>
        <activity
            android:name=".WebActivity" >
        </activity>
        <service
            android:name="com.reader.searchfile.service.SearchFileService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.reader.searchfile.service.ISearchFileService" />
            </intent-filter>
        </service>
    </application>
</manifest>