<?xml version="1.0" encoding="utf-8"?>
<com.reader.ui.AdobeView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="dddddn" >

    <com.reader.ui.ActionBar
        android:id="@+id/actionbar"
        style="@style/ActionBar" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sidebar_background"
        android:scrollingCache="false" />

    <android.support.v4.view.ViewPager
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F2F2F2" />
    <!-- android:background="@drawable/file_list_bg" -->

</com.reader.ui.AdobeView>